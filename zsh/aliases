alias inkscape=/Applications/Inkscape.App/Contents/MacOS/inkscape
alias t=tmux
alias ta="tmux attach"
alias p=python
alias ipy="python -m IPython"
alias o=open
alias ls="eza --group-directories-first"
alias c=clear

# vim aliases
alias vim=nvim
alias v=nvim
alias vi=nvim
alias nv="neovide --no-vsync &"

# sesh aliases
alias sc='sesh connect'                         # connect to a session
alias scf='sesh connect $(sesh list | fzf)'     # connect to a session interactively
alias sf='sesh connect $(sesh list -t | fzf)'   # connect to a session interactively, filter for running tmux sessions

# ollama aliases
alias ll="ollama run llama3"


